<h1>Add course</h1>

<form action="/add" method="POST">
    <div class="input-field">
        <input id="title" name="Name" type="text" class="validate" required>
        <label for="title">Course name</label>
        <span class="helper-text" data-error="Enter name"></span>
    </div>
    <div class="input-field">
        <input id="price" name="Price" type="number" class="validate" required min="1">
        <label for="price">Price</label>
        <span class="helper-text" data-error="Enter price"></span>
    </div>
    <div class="input-field">
        <input id="img" name="Image" type="text" class="validate" required>
        <label for="img">Url image</label>
        <span class="helper-text" data-error="Enter image url"></span>
    </div>
    <button class="btn btn-primary">Add course</button>
</form>